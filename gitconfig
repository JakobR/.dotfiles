[user]
  name = Jakob Rath
  email = git@jakobrath.eu
[color]
  ui = true
[core]
  excludesfile = ~/.gitignore-global
  attributesFile = ~/.gitattributes-global
[merge "gemfilelock"]
  name = relocks the gemfile.lock
  driver = bundle install
[alias]
  st = status
  co = checkout
  last = log --decorate -1 HEAD
  ld = -c 'core.pager=less -S' log --decorate --pretty=oneline --abbrev-commit
  lg = -c 'core.pager=less -S' log --decorate --pretty=oneline --abbrev-commit --graph --all
  d = diff
  ds = diff --cached
  dn = diff --no-index
  dw = -c 'core.pager=less -S' diff --word-diff
[push]
  default = simple
[include]
  path = ~/.gitconfig.local
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[diff]
	compactionHeuristic = 1
[diff "pdf"]
    # Only metadata
    textconv = pdfinfo
    # Metadata and text content
    ; textconv="pdfinfo \"$1\"; pdftotext \"$1\" - #"
    cachetextconv = true
