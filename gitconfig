[merge "gemfilelock"]
  name = relocks the gemfile.lock
  driver = bundle install
[alias]
  st = status
  co = checkout
  last = log --decorate -1 HEAD
  ld = -c 'core.pager=less -S' log --decorate --pretty=oneline --abbrev-commit
  d = diff
  ds = diff --cached
  dn = diff --no-index
[push]
  default = simple
[include]
  path = ~/.gitconfig.local
