[user]
    name = Jakob Rath
    email = git@jakobrath.eu
[color]
    ui = always
[color "diff"]
    commit = blue bold
    meta = yellow
    frag = cyan
    func = 9 ul
    old = red
    new = green
    whitespace = red reverse
[color "diff-highlight"]
    oldNormal = red
    oldHighlight = red bold 52
    newNormal = green
    newHighlight = green bold 22
[core]
    excludesfile = ~/.gitignore-global
    attributesFile = ~/.gitattributes-global
[merge "gemfilelock"]
    name = relocks the gemfile.lock
    driver = bundle install
[alias]
    st = status
    co = checkout
    last = log --decorate -1 HEAD
    ld = log --decorate --pretty=oneline --abbrev-commit
    lg = log --decorate --pretty=oneline --abbrev-commit --graph --all
    d = diff
    ds = diff --cached
    dn = diff --no-index
    dw = diff --word-diff
    dsw = diff --cached --word-diff
[push]
    default = simple
[include]
    path = ~/.gitconfig-local
[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true
[diff]
    compactionHeuristic = 1
[diff "pdf"]
    # Only metadata
    textconv = pdfinfo
    # Metadata and text content
    ; textconv="pdfinfo \"$1\"; pdftotext \"$1\" - #"
    cachetextconv = true
[difftool "pdf"]
    cmd = diff-pdf --view \"$LOCAL\" \"$REMOTE\"
[diff "zip"]
    textconv = unzip -c -a
