{
  "title": "TAB as a POWERFUL MODIFIER LAYER",
  "rules": [
    {
      "description": "TAB as a POWERFUL MODIFIER LAYER",
      "manipulators": [
        {
            "from": {
                "key_code": "tab"
            },
            "to": [
                {
                    "set_variable": {
                        "name": "tab_modifier",
                        "value": 1
                    }
                }
            ],
            "to_after_key_up": [
                {
                    "set_variable": {
                        "name": "tab_modifier",
                        "value": 0
                    }
                }
            ],
            "to_if_alone": [
              {
                "key_code": "tab"
              }
            ],
            "type": "basic"
        },
        {
            "conditions": [
                {
                    "type": "variable_if",
                    "name": "tab_modifier",
                    "value": 1
                }
            ],
            "from": {
                "key_code": "c"
            },
            "to": [
                {
                    "key_code": "t"
                },
                {
                    "key_code": "a"
                },
                {
                    "key_code": "b"
                }
            ],
            "type": "basic"
        }
      ]
    }
  ]
}
