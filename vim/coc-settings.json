{
    "diagnostic.signOffset": 9999999,
    "languageserver": {
        "haskell": {
            "command": "hie-wrapper",
            "rootPatterns": [
                "stack.yaml",
                "cabal.config",
                "package.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ],
            "initializationOptions": {
                "languageServerHaskell": {
                    "hlintOn": true
                }
            }
        }
    },
    "suggest.minTriggerInputLength": 2
}
